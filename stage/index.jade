  body
    .ui-shim
      .label Hosts: 
      .state
        .txt Set
        select.hosts#hosts-state-selector
        .txt state to
        select.states#host-states
        button#hosts go
      .label Generations: 
      .state
        .txt Set
        select.generations#generations-state-selector
        .txt state to
        select.states#gen-states
        button#generations go
      .label Components
      .state
        .txt Add Component to
        select.hosts#add-component-select
        button#add-component go
      .state
        .txt Remove Component 
        select.components#remove-component-select
        button#remove-component go
      .state
        .txt Add Generation to
        select.components#add-generation-select
        button#add-generation go
      .state
        .txt Remove Generation from
        select.generations#remove-generation-select
        button#remove-generation go
    .holder.boxes
    
